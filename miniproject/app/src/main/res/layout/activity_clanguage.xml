<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="INTRODUCTION">


    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#ABFF9800"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/bvg" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="INTRODUCTION"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/VKC"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VARIABLES_KEYWORDS_CONSTANTS"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/IO"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="INSTRUCTIONS_OPERATIONS"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/CI"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CONDITIONAL_INSTRUCTIONS"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/LCS"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LOOP_CONTROL_STATEMENTS"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/FR"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FUNCTIONS AND RECURSION"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/A"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="C - ARRAY"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/S"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="C - STRING"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/ST"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="C - STRUCTURES"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/FIO"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="C -  FILE INPUT/OUTPUT"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/DMA"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DYNAMIC MEMORY ALLOCATION"
                app:backgroundTint="#000D55" />

            <Button
                android:id="@+id/button19"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SOME EXAMPLES"
                app:backgroundTint="#000D55" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>