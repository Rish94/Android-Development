<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PYTHON">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                app:srcCompat="@drawable/python" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/in"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="INTRODUCTION"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />

            <Button
                android:id="@+id/CM"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="COMMENTS  MODULES"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />

            <Button
                android:id="@+id/VD"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VARIABLES AND DATATYPES"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />

            <Button
                android:id="@+id/PS"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="STRING"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />

            <Button
                android:id="@+id/LT"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LIST AND TUPLES"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />

            <Button
                android:id="@+id/DS"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DICTIONARY AND SETS"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />

            <Button
                android:id="@+id/CE"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CONDITIONAL EXPRESSIONS"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />

            <Button
                android:id="@+id/PLOOP"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LOOP"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />

            <Button
                android:id="@+id/PFR"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FUNCTION AND RECURSION"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />

            <Button
                android:id="@+id/PFH"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FILE HANDLING"
                android:textColor="#000E59"
                app:backgroundTint="#FAC116" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>